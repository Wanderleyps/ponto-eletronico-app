@model PontoEletronico.Application.DTOs.FuncionarioDTO
@using PontoEletronico.Domain.Enums

@{
    ViewData["Title"] = "Editar Funcionario";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<form asp-action="Edit">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label">Nome <span style="color: red">*</span></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Matricula" class="col-md-2 control-label">Matrícula <span style="color: red">*</span></label>
            <div class="col-md-10">
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Cargo" class="col-md-2 control-label">Cargo <span style="color: red">*</span></label>
            <div class="col-md-10">
                <input asp-for="Cargo" class="form-control" />
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="TipoJornada" class="col-md-2 control-label">Tipo de Jornada <span style="color: red">*</span></label>
            <div class="col-md-10">
                <select asp-for="TipoJornada" asp-items="Html.GetEnumSelectList<TipoJornada>()" class="form-control">
                    <option value="">Selecione o tipo de jornada</option>
                </select>
                <span asp-validation-for="TipoJornada" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a asp-action="Index" class="btn btn-danger">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </div>

    </div>
</form>
