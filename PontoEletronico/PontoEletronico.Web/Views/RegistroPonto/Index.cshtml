@model IEnumerable<PontoEletronico.Application.DTOs.RegistroPontoDTO>

@{
    ViewData["Title"] = "Registro de Pontos";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="panel panel-default">

    <div>
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@ViewBag.Funcionario.Nome</dd>
            <dt class="col-sm-2">Cargo</dt>
            <dd class="col-sm-10">@ViewBag.Funcionario.Cargo</dd>
            <dt class="col-sm-2">Tipo de Jornada</dt>
            <dd class="col-sm-10">@ViewBag.Funcionario.TipoJornada</dd>
        </dl>
    </div>
    <hr />

    <form asp-controller="RegistroPonto" asp-action="BuscarPorData" method="post">
        <div class="row">
            <div class="col-md-6">
                <label for="buscarPorData" class="col-md-4 control-label"><strong>Buscar por data</strong></label>
                <div class="form-group d-flex">
                    <div class="col-md-8 d-flex">
                        <input type="date" class="form-control" id="buscarPorData" name="buscarPorData" value="@ViewBag.BuscarPorData">
                        <button type="submit" class="btn btn-primary ml-2">Buscar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>


    <table class="table table-striped">
        <thead>
            <tr>               
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hora)
                </th>
                <th>
                    Tipo de Registro
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>                    
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Editar" class="btn btn-warning">
                            <span class="fas fa-edit">Editar</span>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" title="Apagar" class="btn btn-danger">
                            <span class="fas fa-search">Apagar</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    // Define o valor máximo do campo de data como a data atual
    document.getElementById("buscarPorData").setAttribute("max", new Date().toISOString().split("T")[0]);
</script>